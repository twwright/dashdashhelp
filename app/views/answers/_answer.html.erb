<div>
  <%= link_to answer.user.username, user_path(answer.user.username) %> suggested:
  <%= answer.content %><br>
  <% if answer.image.attached? %>
    <p>
        <%= image_tag answer.image.variant(resize_to_limit: [100,100]) %>
    </p>
  <% end %>
  <%= link_to question_path(answer.question_id) do %>
    <em><%= time_ago_in_words(answer.created_at) %> ago</em>
  <% end %>
</div>