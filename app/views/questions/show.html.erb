<%= render partial: 'question', locals: { question: @question } %>

<h1>Answers</h1>
<% if @question.answers.count > 0 %>
  <% @question.answers.each do |answer| %>
    <% if answer.user != nil %>
      <%= render partial: 'answers/answer', locals: { answer: answer } %><br>
    <% end %>
  <% end %>
<% else %>
  <p><em>Looks like no one has answered this question yet! Be the first.</em></p>
<% end %>

<hr>

<h1>Add an Answer</h1>
<%= form_for [@question, @answer] do |f| %>
  <%= f.label :content, "Add an answer" %><br>
  <%= f.text_area :content %>
  <%= f.submit "Submit answer", class: "btn btn-primary" %>
<% end %>