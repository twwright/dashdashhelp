  <div>
    <%= link_to question.username, question.user %>
    <%= question.body %>
    <% if question.image.attached? %>
      <p>
        <strong>Image:</strong>
        <br>
          <%= image_tag question.image.variant(resize_to_limit: [100,100]) %>
      </p>
    <% end %>
    <%= link_to question do %>
      <%= time_ago_in_words(question.created_at) %> ago
    <% end %>

    <%= vote_button(question) %>
  </div>